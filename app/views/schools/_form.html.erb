<%= simple_form_for(@school) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :name %>
    <%= f.input :sex %>
    <%= f.input :id_card %>
    <%= f.input :mobile %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
