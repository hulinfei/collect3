<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>【<%= @current_site&.name || "文章采集" %>】后台管理</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" href="/css/animate.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/simple-line-icons.css" type="text/css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/app.min.css" type="text/css" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :style %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="app app-header-fixed ">
      <!-- header -->
      <%= render "shared/admin/header" %>
      <!-- / header -->
      <!-- aside -->
      <%= render "shared/admin/sidemenu" %>
      <!-- / aside -->
      <!-- content -->
      <div id="content" class="app-content">
        <div class="app-content-body ">
          <div class="bg-light lter b-b wrapper-md" id="title-content">
            <h1 class="m-n font-thin h3"><%= @title %></h1>
          </div>
          <div class="wrapper-md">
            <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>">
                <%= value %>
              </div>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
      <!-- /content -->
      <!-- footer -->
      <%= render "shared/admin/footer" %>
      <!-- / footer -->
    </div>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/ui-nav.js"></script>
    <script src="/js/ui-toggle.js"></script>
    <script src="/js/vue.min.js"></script>
    <script src="/js/vue-resource.min.js"></script>
    <%= yield :script %>
  </body>
</html>
